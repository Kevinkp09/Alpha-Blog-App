<h1 class="text-center mt-4">Listing Articles</h1>
<% @articles.each do |article| %>
<div class="row justify-content-md-center ">
  <div class="col-8 mt-4">
    <div class="card text-center shadow p-1 mb-5 bg-body rounded">
      <div class="card-header fst-italic">
        By Kevin Patel
      </div>
      <div class="card-body">
       <h5 class="card-title"><%= article.title %></h5>
       <p class="card-text"><%= article.description %></p>
       <a href="#" class="btn btn-primary">Go somewhere</a>
      </div>
      <div class="card-footer text-body-secondary">
         2 days ago
      </div>
    </div>
  </div>
</div>
<% end %>

 <footer id="sticky-footer" class="flex-shrink-0 py-4 bg-dark text-white ">
    <div class="container text-center">
      <small>Copyright &copy; Alpha Blog</small>
    </div>
</footer>