<div class="container">  
 <div class="row justify-content-center ">
    <div class="col-10">
        <%= render 'shared/errors', obj: @user%>
        <%= form_with(model: @user, class: "shadow p-3 mb-2 bg-info rounded", local: true) do |f| %>
            <div class="form-group row">
                <%= f.label :username, class: "col-2 col-form-label text-light" %> 
                <div class="col-10">
                <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter username" %>
                </div>
            </div>
            <br>
            <div class="form-group row">
                <%= f.label :email, class: "col-2 col-form-label text-light" %>
                <div class="col-10">
                <%= f.email_field :email, rows: 10, class: "form-control shadow rounded", placeholder: "Enter your email" %>
                </div>
            </div>
            <br>
            <div class="form-group row">
                <%= f.label :password, class: "col-2 col-form-label text-light" %>
                <div class="col-10">
                <%= f.password_field :password, rows: 10, class: "form-control shadow rounded", placeholder: "Enter password" %>
                </div>
            </div>
            <div class="form-group row text-center justify-content-center  ">
                <%= f.submit "Sign up", class: "btn btn-outline-light w-25 mt-2" %>
            </div>
        <% end %>
    </div>
    <div class="mb-3">
    <%= link_to 'Cancel and return to articles listing', articles_path, class: "form-group row d-flex justify-content-center mt-2" %>
    </div>
 </div>
</div>